<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@drawable/invoice_item_background"
    android:padding="16dp">

    <TextView
        android:id="@+id/invoice_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="test"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/invoice_icon"
        app:layout_constraintBottom_toBottomOf="@+id/invoice_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/invoice_number" />

    <TextView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/project_icon_png_8"
        android:text="@string/project_no"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/project_number"
        app:layout_constraintEnd_toStartOf="@+id/project_number"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/project_number" />

    <TextView
        android:id="@+id/project_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/invoice_number" />


    <TextView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sales_order_icon"
        android:text="@string/so_no"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/project_number"
        app:layout_constraintEnd_toStartOf="@+id/sales_order_num"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/project_number"
        app:layout_constraintTop_toTopOf="@+id/project_number"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/sales_order_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/project_number" />

    <TextView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/po_icon"
        android:text="@string/po_no"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/project_number"
        app:layout_constraintEnd_toStartOf="@+id/po_number"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/sales_order_num"
        app:layout_constraintTop_toTopOf="@+id/project_number"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/po_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/project_number" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_barcode_icon"
        app:layout_constraintBottom_toBottomOf="@+id/material_code"
        app:layout_constraintEnd_toStartOf="@+id/material_code"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/project_number" />

    <TextView
        android:id="@+id/material_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/project_number" />

    <TextView
        android:id="@+id/box_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="test"
        app:layout_constraintEnd_toStartOf="@+id/line_number"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/material_code" />

    <TextView
        android:id="@+id/line_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="test"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/box_number"
        app:layout_constraintTop_toBottomOf="@+id/material_code" />

    <TextView
        android:id="@+id/material_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="test"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@+id/show_serials"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box_number" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/show_serials"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="?android:attr/selectableItemBackground"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:textColor="@color/black"
        app:icon="@drawable/ic_menu"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/material_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/material_desc" />

    <TextView
        android:id="@+id/shipped_qty_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/qty"
        app:layout_constraintBottom_toBottomOf="@+id/shipped_qty"
        app:layout_constraintEnd_toStartOf="@+id/shipped_qty"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shipped_qty" />

    <TextView
        android:id="@+id/shipped_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="test"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/received_qty_label"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/shipped_qty_label"
        app:layout_constraintTop_toBottomOf="@+id/material_desc" />

    <TextView
        android:id="@+id/received_qty_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/received_quantity"
        app:layout_constraintBottom_toBottomOf="@+id/shipped_qty"
        app:layout_constraintEnd_toStartOf="@+id/received_qty"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/shipped_qty"
        app:layout_constraintTop_toTopOf="@+id/shipped_qty"
        app:layout_constraintVertical_bias="0.545" />

    <TextView
        android:id="@+id/received_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/shipped_qty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/received_qty_label"
        app:layout_constraintTop_toTopOf="@+id/shipped_qty" />
</androidx.constraintlayout.widget.ConstraintLayout>